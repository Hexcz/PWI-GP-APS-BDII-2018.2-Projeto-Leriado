<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
	version="2.3">
	
	<lifecycle>
		<phase-listener>br.edu.ifpb.pweb1.listener.AuthListener</phase-listener>
	</lifecycle>

	
	<application>
     	   <locale-config>
     	        <default-locale>pt</default-locale>
     	   </locale-config>
	   <resource-bundle>
		<base-name>messages.mensagens</base-name>
		<var>msg</var>
	   </resource-bundle>
     </application>

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>goLogin</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />			
		</navigation-case>
		<navigation-case>
			<from-outcome>goHome</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
			<redirect />			
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{cadastroBean.cadastrar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/cadastro-sucesso.xhtml</to-view-id>
			<redirect />
		</navigation-case>

		<navigation-case>
			<from-action>#{cadastroBean.cadastrar}</from-action>
			<from-outcome>falha</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-action>#{loginBean.efetuarLogin}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
			<redirect />
		</navigation-case>

		<navigation-case>
			<from-action>#{loginBean.efetuarLogin}</from-action>
			<from-outcome>falha</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>cadastro-sucesso.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginBean.efetuarLogin}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
			<redirect />
		</navigation-case>

		<navigation-case>
			<from-action>#{loginBean.efetuarLogin}</from-action>
			<from-outcome>falha</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>

	</navigation-rule>
</faces-config>
